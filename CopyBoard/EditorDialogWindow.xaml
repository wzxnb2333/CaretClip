<Window x:Class="CopyBoard.EditorDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑文本"
        Width="760"
        Height="560"
        MinWidth="560"
        MinHeight="420"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Background="#F4F6FA"
        FontFamily="Segoe UI Variable Text, Segoe UI">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="0,0,0,10"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Text="编辑文本内容" />

        <Border Grid.Row="1"
                CornerRadius="10"
                BorderBrush="#C8D2E3"
                BorderThickness="1"
                Background="White">
            <TextBox x:Name="EditorTextBox"
                     Margin="2"
                     Padding="10,8"
                     BorderThickness="0"
                     Background="Transparent"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     TextWrapping="Wrap"
                     HorizontalScrollBarVisibility="Disabled"
                     VerticalScrollBarVisibility="Auto" />
        </Border>

        <StackPanel Grid.Row="2"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button Width="88"
                    Height="34"
                    Margin="0,0,8,0"
                    Click="Save_Click"
                    Content="保存" />
            <Button Width="88"
                    Height="34"
                    Click="Cancel_Click"
                    Content="取消" />
        </StackPanel>
    </Grid>
</Window>

